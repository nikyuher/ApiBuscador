{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BuscadorDBlocal": "Server=localhost,3306;Database=prueba;User Id=root;Password=;Allow User Variables=true;",
    "BuscadorDB": "Server=db;Database=BuscadorDB;User Id=sa;Password=YourStrongPassword123;TrustServerCertificate=True"
  },
  "Environment": "Development",
  "JWT": {
    "ValidAudience": "${JWT_ValidAudience}",
    "ValidIssuer": "${JWT_ValidIssuer}",
    "SecretKey": "${JWT_SecretKey}"
  },
  "Email": {
    "FromName": "${Email_FromName}",
    "FromEmail": "${Email_FromEmail}",
    "SmtpHost": "${Email_SmtpHost}",
    "SmtpPort": "${Email_SmtpPort}",
    "SmtpUser": "${Email_SmtpUser}",
    "SmtpPass": "${Email_SmtpPass}",
    "EnableSsl": "true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}